<p>
  <h1><%= @recipe.name %></h1>
  <div class="row">
    <div class="col-md-4 pull-right center">
      <%= gravatar_for @recipe.chef, size: 200 %>
      <p>
        <h5>Brought to you by: <%= @recipe.chef.name %></h5>
      </p>
    </div>
    <div class="col-lg-8">
      <h3><%= @recipe.summary %></h3>
      <div class="well">
        <p>
          <strong>Steps:</strong>
          <%= @recipe.description %>
        </p>
      </div>
    </div>
  </div>
</p>

<%= render 'recipes/linkRecipes' %>